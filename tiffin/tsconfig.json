{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2015"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", ".eslintrc.js"],
  "exclude": ["node_modules", "dist"]
}
